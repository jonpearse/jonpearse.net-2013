!!!
%html{ :lang => 'en' }
  %head
    %meta{ :charset => 'UTF-8' }
    %title  admin.jjp
    %meta{ :"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :name => "viewport", :content => "width=device-width,initial-scale=1,maximum-scale=1" }  
        
    = stylesheet_link_tag 'admin', :media => 'screen'
    = javascript_include_tag 'modernizr'
    = csrf_meta_tags
    
    :javascript
      var ROOT_URI = "#{admin_root_path}";

  %body{ :class => "c-#{controller_name} a-#{params[:action]}" }
    %header.chrome{ :role => 'banner' }
      %h1=  link_to_unless_current 'jjp-lite', admin_root_path
    
      %nav.user{ :role => 'menu' }
        %ul
          %li=  link_to 'Main site', root_path, :class => 'icon -home -fixed-width'
          %li=  link_to 'Change password', admin_change_password_path, :class => 'icon -user -fixed-width'
          %li=  link_to 'Log out', destroy_user_session_path, :class => 'icon -signout -fixed-width'

    = render :partial => 'admin/nav'

    %main.cf
      = render :partial => "#{params[:controller]}/subnav" if lookup_context.template_exists?('subnav', "#{params[:controller]}", true)
      = yield
      
    = javascript_include_tag 'admin'
