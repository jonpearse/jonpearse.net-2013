%tr{ :id => "media-#{content.id}" }
  %th{ :scope => 'row' }
    = link_to content.title, edit_admin_media_path(content)
    %br
    %small= content.file.original_filename
  %td=  content.created_on.strftime('%-e %b, %Y')
  %td.small=  content.media_type
  %td.act
    = link_to_with_icon '', edit_admin_media_path(content), 'pencil-square-o', :title => 'edit this media', :class => '-safe'
    = link_to_with_icon '', admin_media_path(content), 'trash-o', :title => "delete this media", :class => '-warn', :method => :delete, :data => { :confirm => 'Are you sure you wish to delete this? It cannot be undone' }