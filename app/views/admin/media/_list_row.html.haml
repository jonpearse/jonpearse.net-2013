%tr{ :id => "media-#{content.id}" }
  %th{ :scope => 'row' }
    = link_to content.title, edit_admin_media_path(content)
    %br
    %small= content.file.original_filename
  %td=  content.created_on.strftime('%-e %b, %Y')
  %td.small=  content.media_type
  %td.act
    = link_to '<span class="a11y">edit</span>'.html_safe, edit_admin_media_path(content), :class => 'icon -edit'
    = link_to '<span class="a11y">delete</span>'.html_safe, admin_media_path(content), :class => 'icon -trash', :method => :delete, :data => { :confirm => 'Are you sure you wish to delete this? It cannot be undone' }