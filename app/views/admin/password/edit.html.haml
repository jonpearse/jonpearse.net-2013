%h1 Change password

= render :partial => 'admin/common/status'

= form_for [:admin, @user], :url => admin_change_password_path do |f|
  %ol
    %li.text.cf{ :class => (@user.error_class :current_password )}
      = f.label :current_password
      = f.password_field :current_password
      - if @user.has_error? :current_password
        %em.error= @user.error_messages :current_password
        
    %li.text.cf{ :class => (@user.error_class :password )}
      = f.label :password, 'Password'
      = f.password_field :password, :autocomplete => 'off'
      - if @user.has_error? :password
        %em.error= @user.error_messages :password
        
    %li.text.cf{ :class => (@user.error_class :password_confirmation )}
      = f.label :password_confirmation, 'Confirm'
      = f.password_field :password_confirmation, :autocomplete => 'off'
      - if @user.has_error? :password_confirmation
        %em.error= @user.error_messages :password_confirmation
    
  .buttons
    %button{ :type => 'submit', :class => 'major', :name => 'Commit' } Save