%header
  %h2 Two-factor authentication

= form_for resource, :as => resource_name, :url => [resource_name, :checkga], :html => { :method => :put, :class => 'twofa_enter cf' } do |f|
  = f.hidden_field :tmpid, { :value => @tmpid }
  = image_tag "admin/gauth.png", :alt => ''
  
  .wrap
    %p
      Please enter the code generated by your mobile application
    = f.label :gauth_token, 'Code'
    = f.number_field :gauth_token, :autocomplete => 'off', :maxlength => 6
    %button{ :type => 'submit', :class => '-primary' } Verify